@model PgManagerApp.Models.TimeShetViewModel

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<title>Week Wise Timesheet</title>
<style>
    body {
        background-color: white; /* Background color for the body */
    }

    .container {
        margin-top: 50px;
    }

    .form-inline .form-group {
        margin-right: 15px;
    }

    .total-time {
        font-weight: bold;
        margin-top: 20px;
    }

    .employee-info {
        background-color: #f0f8ff; /* Light blue background for employee info */
        padding: 10px;
        border-radius: 5px;
    }
</style>
<div class="container-fluid">
    <h2>Weekly Timesheet</h2>

    <div class="form-inline mb-4">
        <div class="form-group">
            <label for="startDate" class="mr-2">Start Date:</label>
            <input type="date" class="form-control" id="startDate">
        </div>
        <div class="form-group">
            <label for="endDate" class="mr-2">End Date:</label>
            <input type="date" class="form-control" id="endDate">
        </div>
        <button class="btn btn-primary" id="exportBtn">Export</button>
    </div>

    <div class="mb-4">
        <table class="table table-bordered employee-info">
            <tbody>
                <tr>
                    <th>Employee ID</th>
                    <td id="empId">E001</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td id="empName">John Doe</td>
                </tr>
                <tr>
                    <th>Designation</th>
                    <td id="empDesignation">Developer</td>
                </tr>
            </tbody>
        </table>
    </div>

    <table class="table table-primary table-bordered table-striped">
        <thead>
            <tr>
                <th class="bg-white">Weekdays</th>
                <th class="bg-white">Date</th>
                <th class="bg-white">Check-in Time</th>
                <th class="bg-white">Check-out Time</th>
                <th class="bg-white">Total Time</th>
            </tr>
        </thead>
        <tbody id="timesheetBody">
            @if (Model.CheckInOuts != null && Model.CheckInOuts.Any())
            {
                foreach (var data in Model.CheckInOuts)
                {
                    // Get the day of the week from the Date property
                    string dayOfWeek = data.Date.DayOfWeek.ToString(); // Get the name of the day

                    <tr>
                        <td>@dayOfWeek</td> <!-- Display the day of the week -->
                        <td>@data.Date.ToString("d")</td> <!-- Display the date -->
                        <td>@data.CheckInTime</td> <!-- Display CheckInTime -->
                        <td>@data.CheckOutTime</td> <!-- Display CheckOutTime -->
                        <td>comming-soon</td>
                    </tr>
                }
            }
            else
            {
                <tr class="text-danger">
                    <td colspan="5">No data found</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="total-time" id="totalWeeklyTime">
        Total Time: <span id="weeklyTimeValue">48hr</span>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

