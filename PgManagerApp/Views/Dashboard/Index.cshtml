<script>
    let timerInterval;
    let totalTime = 0; // Start with 0 seconds
    let checkInTime;

    function formatTime(seconds) {
        const hours = String(Math.floor(seconds / 3600)).padStart(2, '0');
        const minutes = String(Math.floor((seconds % 3600) / 60)).padStart(2, '0');
        const secs = String(seconds % 60).padStart(2, '0');
        return `${hours}:${minutes}:${secs}`;
    }

    function displayCheckInTime() {
        const currentDate = new Date();
        checkInTime = currentDate.toLocaleString();
        document.getElementById('checkInOut').innerHTML += `
                <div class="log-time">
                    <strong>Log In Time:</strong> ${checkInTime}
                </div>
            `;
    }

    document.getElementById('timer').innerText = formatTime(totalTime); // Set initial timer display

    document.getElementById('startBtn').addEventListener('click', function () {
        let startTime = Date.now();

        timerInterval = setInterval(() => {
            totalTime = Math.floor((Date.now() - startTime) / 1000);
            document.getElementById('timer').innerText = formatTime(totalTime);
        }, 1000);

        displayCheckInTime(); // Display check-in time only
    });

    document.getElementById('endBtn').addEventListener('click', function () {
        clearInterval(timerInterval);
        const logoutModal = new bootstrap.Modal(document.getElementById('logoutModal'));
        logoutModal.show();
    });

    document.getElementById('confirmLogout').addEventListener('click', function () {
        clearInterval(timerInterval);
        const checkOutTime = new Date().toLocaleString(); // Get check-out time on logout
        if (totalTime >= 60) {
            document.getElementById('totalTime').innerText = `Total Time: ${formatTime(totalTime)}`;
        } else {
            document.getElementById('totalTime').innerText = `Total Time: 00:01:00`;
        }
        document.getElementById('checkInOut').innerHTML += `
                <div class="log-time">
                    <strong>Log Out Time:</strong> ${checkOutTime}
                </div>
            `;
        $('#logoutModal').modal('hide');
    });
</script>