@model PgManagerApp.Models.UserApproval
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<style>
    .kanban-board {
        display: flex;
        gap: 1rem;
    }

    .kanban-column {
        width: 32%;
        padding: 1rem;
        border-radius: 8px;
        background: #fff; /* White background for columns */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .task-card {
        background-color: #e0e0e0; /* Light grey background for tasks */
        padding: 1rem;
        border-radius: 8px;
        cursor: pointer;
        margin-bottom: 1rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .kanban-header {
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .create-task-btn {
        top: 20px;
        right: 20px;
    }
</style>
<!-- Begin Page Content -->

<div class="container mt-4">
    <div class="container mt-4 d-flex justify-content-between align-items-center">
        <h2 class="text-center mb-0">Task Board</h2>
        <button class="btn btn-primary create-task-btn" id="createTaskButton">
            <i class="fas fa-plus"></i> Create Task
        </button>
    </div>
    <br/>
    <div class="kanban-board">
        <div class="kanban-column" id="todo">
            <div class="kanban-header">To Do</div>
            <div class="task-card" draggable="true" data-task="Task 1">Task 1</div>
            <div class="task-card" draggable="true" data-task="Task 2">Task 2</div>
        </div>
        <div class="kanban-column" id="inprogress">
            <div class="kanban-header">In Progress</div>
        </div>
        <div class="kanban-column" id="complete">
            <div class="kanban-header">Complete</div>
        </div>
    </div>
</div>

<!-- Modal for Task Details -->
<div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="taskModalLabel">Task Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="taskDetails">Task details will go here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Creating New Task -->
<div class="modal fade" id="newTaskModal" tabindex="-1" aria-labelledby="newTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newTaskModalLabel">Create New Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" id="newTaskInput" placeholder="Enter task name">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="saveTaskButton">Save Task</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    // Drag and Drop functionality
    let draggedTask = null;

    $(".task-card").on("dragstart", function (event) {
        draggedTask = event.target;
    });

    $(".kanban-column").on("dragover", function (event) {
        event.preventDefault();
    });

    $(".kanban-column").on("drop", function (event) {
        event.preventDefault();
        if (draggedTask) {
            event.target.closest('.kanban-column').appendChild(draggedTask);
            draggedTask = null;
        }
    });

    // Modal on Task Click
    $(".task-card").on("click", function () {
        let taskName = $(this).data("task");
        $("#taskDetails").text(taskName + " details will be shown here.");
        $("#taskModal").modal("show");
    });

    // Open New Task Modal
    $("#createTaskButton").on("click", function () {
        $("#newTaskModal").modal("show");
    });

    // Save New Task and add to To Do column
    $("#saveTaskButton").on("click", function () {
        let taskName = $("#newTaskInput").val();
        if (taskName) {
            let newTask = `<div class="task-card" draggable="true" data-task="${taskName}">${taskName}</div>`;
            $("#todo").append(newTask);
            $("#newTaskInput").val(""); // Clear input field
            $("#newTaskModal").modal("hide"); // Hide modal
        }
    });
</script>