@model PgManagerApp.Models.MasterUser


<div class="container-fluid">
    <!-- Page Title and Delete Button -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Profile Management</h1>
        <form asp-controller="Auth" asp-action="DeleteAccount" method="post">
            <button type="submit" class="btn btn-danger shadow-sm" onclick="return confirm('This action will permanently delete all your data. Do you still want to delete this account?');">
                <i class="fas fa-trash fa-sm"></i> Delete Profile
            </button>
        </form>
    </div>

    <!-- Alert Messages -->
    @{
        if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check fa-sm text-success"></i>
                <strong>@TempData["Message"]</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        else if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-times fa-sm text-danger"></i>
                <strong>@TempData["Error"]</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }

    <!-- Profile Section -->
    <div class="shadow rounded bg-white mb-4 p-4">
        <div class="row">
            <!-- Profile Image and Basic Info -->
            <div class="col-md-4 text-center">
                <div class="profile-emoji rounded-circle d-flex align-items-center justify-content-center">
                    😊
                </div>
                <h5>Emp Id: 12345</h5>
                <h6 class="text-muted">Developer</h6>
            </div>

            <!-- Profile Details and Edit Form -->
            <div class="col-md-8">
                <form asp-action="UpdateMaster" method="post" onsubmit="return disableSubmitButton(this);" novalidate>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Name" class="font-weight-bold">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="font-weight-bold">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PasswordHash" class="font-weight-bold">Password</label>
                        <input asp-for="PasswordHash" type="password" class="form-control" placeholder="New Password" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold">Emp Address</label>
                        <input type="text" class="form-control" placeholder="Enter address">
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold">Mobile No</label>
                        <input type="text" class="form-control" placeholder="Enter mobile number">
                    </div>

                    <button type="submit" class="btn btn-info mt-3">
                        <i class="fas fa-edit"></i> Update Profile
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function disableSubmitButton(form) {
        form.querySelector('button[type="submit"]').disabled = true;
        return true;
    }

    function checkFormValidity() {
        // Loop through all forms on the page
        Array.from(document.forms).forEach(function (form) {
            // Get the submit button associated with the form
            var submitButton = form.querySelector('button[type="submit"]');

            // Check if the form is valid
            if (form.checkValidity()) {
                submitButton.disabled = false; // Enable the submit button
            } else {
                submitButton.disabled = true; // Disable the submit button
            }
        });
    }

    // Add event listeners to form inputs to check validity on input
    document.querySelectorAll('input, select, textarea').forEach(function (element) {
        element.addEventListener('input', checkFormValidity);
    });

    // Initial check when the page loads
    checkFormValidity();
</script>

<style>
    .profile-card {
        display: flex;
        gap: 20px;
        align-items: flex-start;
        margin: 20px;
    }

    .card {
        width: 100%;
        max-width: 300px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 20px;
    }

    .form-control[readonly] {
        background-color: #f8f9fa;
    }

    .btn-edit {
        background-color: #007bff;
        color: white;
        font-weight: bold;
        width: 100%;
    }

    .profile-emoji {
        width: 150px;
        height: 150px;
        font-size: 50px;
        background-color: #f0f0f0; /* Light background color for visibility */
        color: #333; /* Emoji color */
        border: 2px solid #ddd; /* Optional border */
    }
</style>