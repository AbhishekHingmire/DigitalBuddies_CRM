@model UserRegistration

    <!-- Profile Card -->
    <div class="card mx-auto text-center" style="max-width: 800px; border-radius: 15px; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);">
        <!-- Profile Picture -->
        <div class="mt-4">
            <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover; border: 5px solid #fff; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);">
        </div>

        <!-- Profile Details -->
        <div class="card-body">
            <h3 class="card-title mb-2">@Model.Name</h3>
            <p class="text-muted">@Model.Designation</p>

            <!-- Contact and Other Information -->
            <div class="text-start mt-4" style="font-size: 0.9rem;">
                <p><strong>User ID:</strong> @Model.UserId</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Mobile:</strong> @Model.MobileNumber</p>
                <p><strong>Salary:</strong> @Model.Salary</p>
                <p><strong>Onboard Date:</strong> @Model.OnboardDate</p>
                <p><strong>Identity:</strong> @Model.IdentityType - @Model.IdentityNumber</p>
                <p><strong>Address:</strong> @Model.Address</p>
            </div>
        </div>
    </div>
