<script>
    $(document).ready(function () {
        // Set the current date
        const today = new Date().toISOString().split('T')[0];
        $('#currentDate').val(today);

        // Handle form submission
        $('#checkInForm').submit(function (event) {
            event.preventDefault();

            const empId = $('#employeeName').val();
            const empName = $('#employeeName option:selected').text();
            const designation = "Employee"; // You can replace it with the actual designation
            const date = $('#currentDate').val();
            const checkIn = $('#checkInTime').val();
            const checkOut = $('#checkOutTime').val();

            // Append data to the table
            $('#checkInOutData').append(`
                <tr>
                    <td>${empId}</td>
                    <td>${empName}</td>
                    <td>${designation}</td>
                    <td>${date}</td>
                    <td>${checkIn}</td>
                    <td>${checkOut}</td>
                    <td>
                        <button class="btn btn-warning btn-sm edit-btn">Edit</button>
                        <button class="btn btn-danger btn-sm delete-btn">Delete</button>
                    </td>
                </tr>
            `);

            // Reset the form
            $('#checkInForm')[0].reset();
            $('#currentDate').val(today); // Reset date to today
        });

        // Handle delete button click
        $(document).on('click', '.delete-btn', function () {
            $(this).closest('tr').remove();
        });

        // Handle edit button click (You can add more functionality here)
